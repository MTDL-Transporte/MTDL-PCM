# Arquivo de exemplo para variáveis de ambiente
# Copie este arquivo para .env e ajuste os valores conforme necessário

# Configuração do Banco de Dados
DATABASE_URL=sqlite:///./data/mtdl_pcm.db
# Para PostgreSQL: postgresql://user:password@localhost/mtdl_pcm
# Para MySQL: mysql://user:password@localhost/mtdl_pcm

# Configuração da Aplicação
APP_NAME=MTDL-PCM
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Configuração do Servidor
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Configuração de Logs
LOG_LEVEL=INFO
LOG_FILE=logs/mtdl_pcm.log

# Configuração de Email (para futuras implementações)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@mtdl-pcm.com

# Configuração de Backup
BACKUP_ENABLED=True
BACKUP_INTERVAL=24  # horas
BACKUP_RETENTION=30  # dias
BACKUP_PATH=backups/

# Configuração de Segurança
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Configuração de Upload
MAX_FILE_SIZE=10485760  # 10MB em bytes
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,xlsx,xls,csv

# Configuração de Relatórios
REPORTS_PATH=reports/
TEMP_PATH=temp/

# Configuração de Integração (para futuras implementações)
ERP_API_URL=https://api.erp.com
ERP_API_KEY=your-erp-api-key
ERP_ENABLED=False

# Configuração de Monitoramento
MONITORING_ENABLED=False
SENTRY_DSN=your-sentry-dsn-here

# Configuração de Cache (para futuras implementações)
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=False
CACHE_TTL=3600  # segundos